# haskell
export HASKELL_HOME=$DEVELOPMENT_BIN/ghc
export CABAL_HOME=$HOME/.cabal
export STACK_HOME=$DEVELOPMENT_BIN/stack
# jdk
export JDK7_HOME=$DEVELOPMENT_BIN/jdk7
export JDK8_HOME=$DEVELOPMENT_BIN/jdk8
export JAVA_HOME=$DEVELOPMENT_BIN/jdk
# idea
export IDEA_HOME=$DEVELOPMENT_BIN/idea
# lein
export LEIN_BIN_HOME=$DEVELOPMENT_BIN/lein
# mongo
export MONGODB_HOME=$DEVELOPMENT_BIN/mongodb
export MONGODB_DATA=$MONGODB_HOME/data
# phantomjs
export PHANTOMJS_HOME=$DEVELOPMENT_BIN/phantomjs
# rust
export RUST_SRC_PATH=$GIT_REPOS/rust_src/src
export RACER_HOME=$DEVELOPMENT_BIN/racer
export RACER_PATH=$RACER_HOME/target/release
# scala
export SCALA_HOME=$DEVELOPMENT_BIN/scala
export SBT_HOME=$DEVELOPMENT_BIN/sbt
# spark
export SPARK_HOME=$DEVELOPMENT_BIN/spark
# tomcat
export CATALINA_HOME=$DEVELOPMENT_BIN/tomcat

# path
TMP_PATH=$DEVELOPMENT_SH
TMP_PATH=$ANT_HOME/bin:$TMP_PATH
TMP_PATH=$CABAL_HOME/bin:$TMP_PATH
TMP_PATH=$EMACS_HOME/bin:$TMP_PATH
TMP_PATH=$GO_HOME/bin:$TMP_PATH
TMP_PATH=$GOTMP_PATH/bin:$TMP_PATH
TMP_PATH=$IDEA_HOME/bin:$TMP_PATH
TMP_PATH=$JAVA_HOME/bin:$TMP_PATH
TMP_PATH=$HASKELL_HOME/bin:$TMP_PATH
TMP_PATH=$LEIN_BIN_HOME:$TMP_PATH
TMP_PATH=$M2_HOME/bin:$TMP_PATH
TMP_PATH=$MONGODB_HOME:$TMP_PATH
TMP_PATH=$PHANTOMJS_HOME/bin:$TMP_PATH
TMP_PATH=$RACER_TMP_PATH:$TMP_PATH
TMP_PATH=$REBAR_HOME:$TMP_PATH
TMP_PATH=$STACK_HOME:$TMP
TMP_PATH=$SBT_HOME/bin:$TMP_PATH
TMP_PATH=$SCALA_HOME/bin:$TMP_PATH
TMP_PATH=$SPARK_HOME/bin:$TMP_PATH
export PATH=.:$TMP_PATH:$PATH
